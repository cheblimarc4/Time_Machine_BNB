<h2>Add your time machine</h2>

<%= simple_form_for(@machine) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name,
                required: true,
                autofocus: true%>
    <%= f.input :size %>
    <%= f.input :speed%>
    <%= f.input :comfort%>
    <%= f.input :price%>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Add Machine" %>
  </div>
<% end %>
