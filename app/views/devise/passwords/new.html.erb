<div class="background-container">
  <video autoplay muted loop id="bg-video">
    <source src="<%= asset_path('galaxy_video.mp4') %>" type="video/mp4">
    Your browser does not support the video tag.
  </video>

  <div class="tm-log-in-txt">
      <div class = "d-flex align-items-center justify-content-center">
        <h2>Forgot your password?</h2>

      </div>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs"><br>
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
      </div>

      <div class="form-actions2"><br>
        <%= f.button :submit, "Reset password email", class: "tm-reset-pass", style: "margin-bottom: 20px;" %><br>
        <%= link_to "Log in", new_session_path(resource_name), class: "forgot-pass-link" %>
        <%= link_to "Sign up", new_registration_path(resource_name), class: "forgot-pass-link" %>
      </div>
    <% end %>
  </div>
</div>
